{{!< default}}
<main>
    <article class="{{post_class}}">
        {{#post}}
            <header>
                <h1>{{{title}}}</h1>
                <h5>
                    <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD/MM/YYYY"}}</time>
                </h5>
                {{#foreach tags}}
                    <span class="label label-primary"><a href="{{url}}"><i class="fa fa-tag"></i> {{name}}</a></span>
                {{/foreach}}
            </header>

            <section class="posts">
                {{content}}

                <hr />
                <div class="social-buttons">
                    <a href="https://twitter.com/share?text={{{title}}}" class="popup fa fa-twitter btn btn-info"></a>
                    <a href="https://www.facebook.com/sharer/sharer.php?u={{@blog.url}}{{url}}" class="popup fa fa-facebook btn btn-primary"></a>
                    <a href="https://plus.google.com/share?url={{@blog.url}}{{url}}" class="popup fa fa-google btn btn-danger"></a>
                </div>
            </section>
        {{/post}}

        <!-- Disqus -->
        <div id="disqus_thread"></div>

        <script type="text/javascript">
        var disqus_shortname = 'example';
        var disqus_identifier = '{{post.id}}';
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </article>
</main>
